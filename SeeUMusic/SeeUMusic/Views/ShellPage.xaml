            xmlns:local2="clr-namespace:SeeUMusic.Views.AudioView"
            xmlns:local3="clr-namespace:SeeUMusic.Views"
            mc:Ignorable="d"
            BarBackgroundColor="{StaticResource bgColor}"
            x:Class="SeeUMusic.Views.ShellPage">
